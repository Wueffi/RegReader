{
	"schemaVersion": 1,
	"id": "wueffis-regreader",
	"version": "${version}",
	"name": "RegReader",
	"description": "Simple Mod to read and display all kinds of Registers in Minecraft.",
	"authors": [
		"Wueffi"
	],
	"contact": {
		"youtube": "https://youtube.com/@wueffiYT/",
		"sources": "https://github.com/wueffi/RegReader"
	},
	"license": "ARR",
	"icon": "assets/wueffis-regreader/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"wueffi.regreader.WueffisRegReader"
		],
		"client": [
          "wueffi.regreader.WueffisRegReaderClient"
		],
		"modmenu": [
			{
				"adapter": "default",
				"value": "wueffi.regreader.RegReaderModMenu",
				"environment": "client"
			}
		]
	},
	"depends": {
		"fabricloader": ">=0.15.7",
		"minecraft": "~1.21.1",
		"java": ">=17",
		"fabric-api": "*"
	}
}